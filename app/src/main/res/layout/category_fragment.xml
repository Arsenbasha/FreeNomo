<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.category">
<ProgressBar
    android:id="@+id/progresBarCategory"
    android:layout_width="100dp"

    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    />
    <TextView
        android:id="@+id/tituloCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/categorias"
        android:textSize="40sp"
        android:textStyle="bold" />
    <GridView
        android:columnWidth="120dp"
        android:id="@+id/gridCategory"
        android:layout_below="@id/tituloCategoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:stretchMode="columnWidth" android:numColumns="2"
        />

</RelativeLayout>
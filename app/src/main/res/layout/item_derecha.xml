<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewChattingright"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:elevation="0dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"

        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imgDerecha"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle" />

        <TextView
            android:id="@+id/letraChatPostUsuario"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewChatleft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:elevation="0dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imgIzquierda"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle" />
        <TextView
            android:id="@+id/letraChatPostDestino"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/mensajeDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/cardviewChattingright"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chat_derecho"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:text="Prueba mensaje derecha"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/mensajeIzquierda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="@drawable/chat_izquierdo"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/cardviewChatleft"
        android:text="Prueba mensaje izquierda"
        android:textColor="@color/white"
        android:textSize="15sp" />



</RelativeLayout>
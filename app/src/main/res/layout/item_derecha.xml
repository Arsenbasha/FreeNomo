<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <TextView
        android:id="@+id/mensajeDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_toLeftOf="@id/imgDerecha"
        android:background="@drawable/chat_derecho"
        android:padding="5dp"
        android:text="Prueba mensaje derecha"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imgDerecha"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/mensajeDerecha"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_launcher_background"
        android:layout_marginEnd="2dp" />
</RelativeLayout>